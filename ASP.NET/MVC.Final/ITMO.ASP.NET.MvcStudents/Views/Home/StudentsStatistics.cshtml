
@{
    ViewBag.Title = "StudentsStatistics";
}

<h2>StudentsStatistics</h2>
<h2>Пять лучших студентов</h2>
<table class="table">
    <tr>
        <td><p>Id</p></td>
        <td><p>Имя</p></td>
        <td><p>Фамилия</p></td>
        <td><p>ADO.NET</p></td>
        <td><p>ASP.NET</p></td>
        <td><p>Java</p></td>
    </tr>
    @foreach (var s in ViewBag.BestStudents)
    {
        <tr>
            <td><p>@s.Id</p></td>
            <td><p>@s.FirstName</p></td>
            <td><p>@s.LastName</p></td>
            <td><p>@s.AdoMark</p></td>
            <td><p>@s.AspMark</p></td>
            <td><p>@s.JavaMark</p></td>
        </tr>
    }
</table>

